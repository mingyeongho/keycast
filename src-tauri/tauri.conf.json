{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "keycast",
  "version": "0.1.0",
  "identifier": "com.mingyeongho.keycast",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "keycast",
        "width": 750,
        "height": 475,
        "label": "main",
        "decorations": false,
        "resizable": false,
        "center": true,
        "transparent": true,

        "windowEffects": {
          "effects": ["hudWindow"],
          "radius": 8
        }
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
